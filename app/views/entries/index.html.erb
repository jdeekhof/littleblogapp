
<% for entry in @entries %>
	<div class="row">
    	<div class="col-md-3">
    		<h3><%= link_to(entry.title, entry_path(entry)) %></h3>
    	</div>
    	<div class="col-md-1">
    		<%= entry.date %>
    	</div>
    	<div class="col-md-6">
    		<%= entry.contents %>
    	</div>
    	<div class="col-md-2">
    		<%= link_to("Edit", edit_entry_path(entry), class: 'btn btn-warning') %>
    	</div>
    </div>
    <br>
<% end %>

<%= link_to("New Entry", new_entry_path, class: 'btn btn-primary') %>



